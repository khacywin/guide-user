{
  "compilerOptions": {
    "declaration": true,
    "declarationDir": "dist",
    "target": "es5",
    "module": "ES2015",
    "strict": true,
    "sourceMap": true,
    "jsx": "react",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
  },
  "include": [
    "src/**/*",
    "src/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    "stories",
    ".storybook",
    "build",
    "**/*.stories.tsx",
    "**/*.test.tsx"
  ]
}
